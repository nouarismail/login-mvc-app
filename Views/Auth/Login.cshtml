@model LoginMvcApp.Models.LoginViewModel
@{
    ViewData["Title"] = "Sign In";
}

<!doctype html>
<html lang="en">



<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">

    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" as="style">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        crossorigin="anonymous">

    <style>
        body {
            background: #f3f5fb;
            min-height: 100vh;
        }

        .navbar-custom {
            background: #ffffff;
            box-shadow: 0 1px 4px rgba(15, 23, 42, 0.06);
        }

        .login-card {
            max-width: 420px;
            margin: 4rem auto;
            box-shadow: 0 20px 40px rgba(15, 23, 42, 0.08);
            border-radius: 1rem;
            border: 0;
        }

        .login-card .card-body {
            padding: 2.5rem;
        }

        @@media (max-width: 576px) {
            .login-card {
                margin: 2rem 1rem;
            }
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-light navbar-custom px-3">
        <a class="navbar-brand fw-bold" href="/">SOAP Login App</a>
        <div class="ms-auto">
            <a class="nav-link d-inline px-2" href="/">Sign in</a>
            <a class="nav-link d-inline px-2" href="/Auth/Register">Register</a>
        </div>
    </nav>

    <main class="d-flex align-items-center justify-content-center">
        <div class="card login-card">
            <div class="card-body">
                <h1 class="h3 text-center mb-4">Sign In</h1>



                @if (Model.Success is bool success)
                {
                    var alertType = success ? "success" : "danger";
                    var alertText = success ? "Login successful" : "Invalid credentials";

                    <div class="alert alert-@alertType" role="alert">
                        @alertText
                    </div>


                    @if (success && Model.Details != null)
                    {
                        <div class="card mt-3">
                            <div class="card-body">
                                <h5 class="card-title mb-3">User information</h5>

                                <dl class="row small mb-0">
                                    <dt class="col-sm-4">Entity ID</dt>
                                    <dd class="col-sm-8">@Model.Details.EntityId</dd>

                                    <dt class="col-sm-4">Name</dt>
                                    <dd class="col-sm-8">@Model.Details.FirstName @Model.Details.LastName</dd>

                                    <dt class="col-sm-4">Email</dt>
                                    <dd class="col-sm-8">@Model.Details.Email</dd>

                                    <dt class="col-sm-4">Mobile</dt>
                                    <dd class="col-sm-8">@Model.Details.Mobile</dd>

                                    <dt class="col-sm-4">Country ID</dt>
                                    <dd class="col-sm-8">@Model.Details.CountryID</dd>

                                    <dt class="col-sm-4">FTP Host</dt>
                                    <dd class="col-sm-8">@Model.Details.FTPHost</dd>

                                    <dt class="col-sm-4">FTP Port</dt>
                                    <dd class="col-sm-8">@Model.Details.FTPPort</dd>
                                </dl>
                            </div>
                        </div>
                    }
                }

                <form asp-action="Login" asp-controller="Auth" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        Sign In
                    </button>
                </form>
            </div>
        </div>
    </main>

   


</body>

</html>