@model LoginMvcApp.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">

    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" as="style">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        crossorigin="anonymous">

    <style>
        body {
            background: #f3f5fb;
            min-height: 100vh;
        }

        .navbar-custom {
            background: #ffffff;
            box-shadow: 0 1px 4px rgba(15, 23, 42, 0.06);
        }

        .auth-card {
            max-width: 480px;
            margin: 4rem auto;
            box-shadow: 0 20px 40px rgba(15, 23, 42, 0.08);
            border-radius: 1rem;
            border: 0;
        }

        .auth-card .card-body {
            padding: 2.5rem;
        }

        @@media (max-width: 576px) {
            .auth-card {
                margin: 2rem 1rem;
            }
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-light navbar-custom px-3">
        <a class="navbar-brand fw-bold" href="/">SOAP Login App</a>
        <div class="ms-auto">
            <a class="nav-link d-inline px-2" href="/">Sign in</a>
            <a class="nav-link d-inline px-2" href="/Auth/Register">Register</a>
        </div>
    </nav>

    <main class="d-flex align-items-center justify-content-center">
        <div class="card auth-card">
            <div class="card-body">
                <h1 class="h3 text-center mb-4">Create account</h1>

                @if (Model.Success.HasValue)
                {
                    var alertType = Model.Success.Value ? "success" : "danger";
                    <div class="alert alert-@alertType" role="alert">
                        @Model.Message
                    </div>

                    @if (Model.Details != null)
                    {
                        <dl class="row small mt-2">
                            <dt class="col-sm-4">Result code</dt>
                            <dd class="col-sm-8">@Model.Details.ResultCode</dd>
                            <dt class="col-sm-4">Result message</dt>
                            <dd class="col-sm-8">@Model.Details.ResultMessage</dd>
                        </dl>
                    }
                }

                <form asp-action="Register" asp-controller="Auth" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label" asp-for="Email">Email</label>
                        <input class="form-control" asp-for="Email" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="FirstName">First name</label>
                        <input class="form-control" asp-for="FirstName" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="LastName">Last name</label>
                        <input class="form-control" asp-for="LastName" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Mobile">Mobile</label>
                        <input class="form-control" asp-for="Mobile" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Password">Password</label>
                        <input class="form-control" asp-for="Password" type="password" />
                    </div>

                    <div class="mb-4">
                        <label class="form-label" asp-for="ConfirmPassword">Confirm password</label>
                        <input class="form-control" asp-for="ConfirmPassword" type="password" />
                    </div>

                    @* Optional: expose Country/AID for testing *@
                    @*<div class="row">
                    <div class="col-6 mb-3">
                        <label class="form-label" asp-for="CountryID">Country ID</label>
                        <input class="form-control" asp-for="CountryID" />
                    </div>
                    <div class="col-6 mb-3">
                        <label class="form-label" asp-for="AID">AID</label>
                        <input class="form-control" asp-for="AID" />
                    </div>
                </div>*@

                    <button type="submit" class="btn btn-primary w-100">
                        Register
                    </button>

                    <div class="text-center mt-3">
                        <small>
                            Already have an account?
                            <a asp-controller="Auth" asp-action="Login">Sign in</a>
                        </small>
                    </div>
                </form>
            </div>
        </div>
    </main>
</body>

</html>